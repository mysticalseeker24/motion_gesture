# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_TTS_MODEL=tts-1

# Camera Configuration
CAMERA_INDEX=0  # 0 for default camera, 1, 2, etc. for additional cameras
FRAME_WIDTH=1280
FRAME_HEIGHT=720

# TTS Configuration
# Options: 'gtts' (online), 'pyttsx3' (offline), or 'openai' (premium)
TTS_ENGINE=gtts
TTS_LANGUAGE=en

# Vision-based Gesture Recognition Configuration
VISION_ENABLED=true
IMAGE_CAPTURE_INTERVAL=5.0
CONFIDENCE_THRESHOLD=0.6

# Performance Settings
MAX_SKIP_FRAMES=2
DOWNSCALE_FACTOR=1.0
